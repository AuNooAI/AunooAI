# AunooAI Community Edition - Docker Configuration
# Copy this file to .env and update with your values

# PostgreSQL Configuration
POSTGRES_USER=aunoo_user
POSTGRES_PASSWORD=aunoo_secure_2025
POSTGRES_DB=aunoo_db
POSTGRES_PORT=5432

# Application Configuration
APP_PORT=8080
INSTANCE=community
ENVIRONMENT=production

# Build Information (auto-populated by build script)
APP_VERSION=community
GIT_BRANCH=main
BUILD_DATE=

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Required API Keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional API Keys
ANTHROPIC_API_KEY=
FIRECRAWL_API_KEY=
NEWSAPI_KEY=
ELEVENLABS_API_KEY=
